                "quote": {
                    "type": "boolean"
                },
                "suffix": {
                    "description": "The string to insert after the content.",
                    "type": "string"
                },
                "template": {
                    "description": "The template name to use for partial formatting.",
                    "type": "string"
                }
            },
            "required": [
