        "RefType": {
            "enum": [
                "article",
                "book",
                "chapter"
            ],
            "type": "string"
        },
        "SimpleType": {
            "enum": [
                "issue",
                "pages",
                "volume"
            ],
            "type": "string"
        },
        "TemplateModel": {
            "anyOf": [
                {
                    "$ref": "#/definitions/RefList"
                },
                {
                    "$ref": "#/definitions/RefItemTemplate"
                },
                {
                    "$ref": "#/definitions/RefItemSimple"
                },
                {
                    "$ref": "#/definitions/RefItemContributorList"
                },
                {
                    "$ref": "#/definitions/RefItemLocatorList"
                },
                {
                    "$ref": "#/definitions/RefItemDate"
                },
                {
                    "$ref": "#/definitions/RefItemTitle"
                },
                {
                    "$ref": "#/definitions/Cond"
                }
            ]
        },
        "TitleType": {
            "enum": [
                "container-title",
                "title"
            ],
            "type": "string"
        },
        "VariableType": {
            "enum": [
                "article",
                "author",
                "book",
                "chapter",
                "container-title",
                "editor",
                "issue",
                "issued",
                "pages",
                "publisher",
                "title",
                "volume"
            ],
            "type": "string"
        }
    },
    "properties": {
        "bibliography": {
            "$ref": "#/definitions/RefItemBibliographyList",
            "description": "The bibliography specification."
        },
        "categories": {
            "description": "The categories the style belongs to; for purposes of indexing.",
            "items": {
                "$ref": "#/definitions/CategoryType"
            },
            "type": "array"
        },
        "citation": {
            "$ref": "#/definitions/RefItemCitationList",
            "description": "The citation specification."
        },
        "description": {
            "description": "The description of the style.",
            "type": "string"
        },
        "id": {
            "description": "The machine-readable token that uniquely identifies the style.",
            "type": "string"
        },
        "templates": {
            "description": "Template definitions, for use elsewhere in the style.",
            "items": {
                "$ref": "#/definitions/NamedTemplate"
            },
            "type": "array"
        },
        "title": {
            "description": "The human-readable name of the style.",
            "type": "string"
        }
    },
    "type": "object"
}

