{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2022"
    ],
    "outDir": "lib",
    "experimentalDecorators": true,
    "noEmit": true,
    "noUnusedLocals": false,
    "removeComments": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "useDefineForClassFields": false
  },
  "allowImportingTsExtensions": true,
  "include": [
    "src/**/*.ts",
    "tests/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
